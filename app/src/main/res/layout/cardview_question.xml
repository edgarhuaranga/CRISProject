<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_question_statement"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="ABCDASDEDASDASD"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radiogroup_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_question_topic">

                <RadioButton
                    android:id="@+id/radiogroup_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option A" />

                <RadioButton
                    android:id="@+id/radiogroup_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option B" />

                <RadioButton
                    android:id="@+id/radiogroup_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option C" />

                <RadioButton
                    android:id="@+id/radiogroup_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option D" />

                <RadioButton
                    android:id="@+id/radiogroup_option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Option E" />
            </RadioGroup>

            <TextView
                android:id="@+id/textview_question_topic"
                style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Topic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_question_statement" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>